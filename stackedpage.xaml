<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="tni2213211861.stackedpage">
<StackLayout BackgroundColor="LightBlue" Orientation="Vertical">
    <Button Text="Btn1" HorizontalOptions="Start"/>
    <Button Text="Btn2" HorizontalOptions="Center"/>
    <Button Text="Btn3" HorizontalOptions="End"/>
    <Button Text="Btn4" HorizontalOptions="Fill"/>

    <StackLayout Orientation="Horizontal" >
        <BoxView Color="LightCyan" WidthRequest="150"/>
          <BoxView Color="LightGreen" WidthRequest="150"/>
          <BoxView Color="AliceBlue" WidthRequest="150"/>

    </StackLayout>

    <Button Text="Btn5" HorizontalOptions="Start" VerticalOptions="StartAndExpand"/>
    <Button Text="Btn6d" HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>
    <Button Text="Btn7" HorizontalOptions="End" VerticalOptions="EndAndExpand"/>
    <Button Text="Btn8" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>

    <StackLayout Orientation="Horizontal" BackgroundColor="LightSteelBlue">

        <Button Text="BTN9" HorizontalOptions="FillAndExpand"/>
        <Button Text="BTN10" HorizontalOptions="FillAndExpand"/> 

    </StackLayout>
 

</StackLayout>
</ContentPage>

 